# Environment Configuration Template for DocumentsToMarkdown
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration (optional - defaults will be used if not specified)
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Alternative AI Vision Services (optional - for future expansion)
# GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
# AZURE_COGNITIVE_SERVICES_KEY=your_azure_key_here
# AZURE_COGNITIVE_SERVICES_ENDPOINT=your_azure_endpoint_here

# Image Processing Configuration
IMAGE_MAX_SIZE_MB=20
IMAGE_QUALITY_COMPRESSION=85

# Logging Configuration
LOG_LEVEL=INFO
